@{
}
@{
    ViewData["Title"] = "Place Order";
}

<h2>Place Order</h2>

<form method="post" action="@Url.Action("PlaceOrder", "Order")">
    <label>User ID:</label>
    <input type="number" name="userId" required />
    <br />

    <label>Product IDs (e.g., 1,2):</label>
    <input type="text" name="productIds" required />
    <br />

    <label>Quantities ( e.g., 1,2):</label>
    <input type="text" name="quantities" required />
    <br />

    <button type="submit">Place Order</button>
</form>
