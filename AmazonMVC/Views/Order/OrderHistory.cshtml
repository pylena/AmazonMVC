@{
}
@model List<Order>

<h2>Order History</h2>
<table>
    <thead>
        <tr>
            <th>Order ID</th>
            <th>Details</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.OrderID</td>
                <td>
                    <ul>
                        @foreach (var detail in order.OrderDetails)
                        {
                            <li>@detail.ProductID - @detail.Quantity x @detail.SubTotal</li>
                        }
                    </ul>
                </td>
            </tr>
        }
    </tbody>
</table>
